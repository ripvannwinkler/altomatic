<Window x:Class="Altomatic.UI.Forms.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Altomatic.UI.Forms"
        mc:Ignorable="d"
				MinHeight="450"
				MinWidth="800"
        Title="Options" Height="450" Width="800">
	<Border Padding="8">
		<DockPanel>
			<StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
				<Border Padding="0 8 0 0">
					<StackPanel Orientation="Horizontal">
						<Button Name="Cancel1" Click="Cancel1_Click" IsCancel="True">
							<Button.Content>
								<TextBlock>Cancel</TextBlock>
							</Button.Content>
						</Button>
						<Button Name="Save1" Margin="8 0 0 0" Click="Save1_Click" IsDefault="True">
							<Button.Content>
								<TextBlock>Save</TextBlock>
							</Button.Content>
						</Button>
					</StackPanel>
				</Border>
			</StackPanel>
			<TabControl>
				<TabItem Header="Healing" Height="20" VerticalAlignment="Top">
					<TextBlock>Healing stuff</TextBlock>
				</TabItem>
				<TabItem Header="Debuff Removal">
					<TextBlock>Debuff stuff</TextBlock>
				</TabItem>
				<TabItem Header="Geomancy">
					<TextBlock>Geomancy stuff</TextBlock>
				</TabItem>
				<TabItem Header="Job Abilities">
					<TextBlock>Job ability stuff</TextBlock>
				</TabItem>
				<TabItem Header="Other">
					<TextBlock>Other stuff</TextBlock>
				</TabItem>
			</TabControl>
		</DockPanel>
	</Border>
</Window>
