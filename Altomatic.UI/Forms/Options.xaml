<Window x:Class="Altomatic.UI.Forms.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Altomatic.UI.Forms"
        mc:Ignorable="d"
				MinHeight="450"
				MinWidth="800"
        Title="Options" Height="450" Width="800">
	<Border Padding="8">
		<DockPanel>
			<StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
				<Border Padding="0 8 0 0">
					<StackPanel Orientation="Horizontal">
						<Button Name="Cancel1" Margin="8 0 0 0" IsCancel="True">
							<Button.Content>
								<TextBlock>Cancel</TextBlock>
							</Button.Content>
						</Button>
						<Button Name="Load1" Margin="8 0 0 0" Click="Load1_Click">
							<Button.Content>
								<TextBlock>Load</TextBlock>
							</Button.Content>
						</Button>
						<Button Name="Save1" Margin="8 0 0 0" IsDefault="True" Click="Save1_Click">
							<Button.Content>
								<TextBlock>Save</TextBlock>
							</Button.Content>
						</Button>
						<Button Name="Save2" Margin="8 0 0 0" IsDefault="True" Click="Save2_Click">
							<Button.Content>
								<TextBlock>Save As...</TextBlock>
							</Button.Content>
						</Button>
					</StackPanel>
				</Border>
			</StackPanel>
			<TabControl>
				<TabItem Header="Healing">
					<Border Padding="10">
						<TextBlock>Healing stuff</TextBlock>
					</Border>
				</TabItem>
				<TabItem Header="Debuff Removal">
					<Border Padding="10">
						<TextBlock>Debuff stuff</TextBlock>
					</Border>
				</TabItem>
				<TabItem Header="Geomancy">
					<Border Padding="10">
						<TextBlock>Geomancy stuff</TextBlock>
					</Border>
				</TabItem>
				<TabItem Header="Job Abilities">
					<Border Padding="10">
						<TextBlock>Job ability stuff</TextBlock>
					</Border>
				</TabItem>
				<TabItem Header="Other">
					<Border Padding="10">
						<TextBlock>Other stuff</TextBlock>
					</Border>
				</TabItem>
			</TabControl>
		</DockPanel>
	</Border>
</Window>
